{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es2015", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    ".cache",
    "public",
    "node_modules",
    "build",
    "webpack",
    "jest",
    "apollo.config.js",
    "gatsby-browser.js",
    "gatsby-config.js",
    "gatsby-node.js",
    "gatsby-ssr.js"
  ],
  "include": ["./src/**/*"]
  // "types": ["typePatches"]
}
